<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/cl_search"
        android:background="@drawable/shape_full"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35">
        <ImageView
            android:id="@+id/iv_search"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/search"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            app:layout_constraintLeft_toRightOf="@id/iv_search"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/grieyed"
            android:text="林正英的僵尸片 | 电视剧重案六组"
            android:layout_width="@dimen/dp_265"
            android:layout_height="@dimen/dp_25"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintLeft_toRightOf="@id/cl_search"
        android:src="@drawable/hongbao"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tab"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@id/cl_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_simpleVideo"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"/>
</androidx.constraintlayout.widget.ConstraintLayout>